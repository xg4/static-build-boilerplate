{
  "name": "static-site-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for static websites development",
  "keywords": [
    "boilerplate",
    "css3",
    "es6",
    "html5",
    "less",
    "parcel",
    "static",
    "typescript"
  ],
  "homepage": "https://github.com/xg4/static-site-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/xg4/static-site-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/static-site-boilerplate.git"
  },
  "license": "MIT",
  "author": "xg4 <xingor4@gmail.com>",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "parcel build src/index.html -d dist --public-url . --no-source-maps --no-content-hash",
    "clean": "rimraf dist",
    "format": "prettier --write src/**/*",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.{css,less,scss} --fix",
    "lint:js": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "start": "parcel src/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,less,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "normalize.css": "8.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/preset-env": "7.7.1",
    "@babel/preset-typescript": "7.7.2",
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "less": "3.10.3",
    "lint-staged": "9.4.3",
    "parcel-bundler": "1.12.4",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-preset-env": "6.7.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "stylelint": "12.0.0",
    "stylelint-config-standard": "19.0.0",
    "typescript": "3.7.2"
  }
}
